{{#if addReviewForm}}
<div class="container">
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="rating">Rating (1-5)</label>
      {{input value=rating id="rating"}}
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      {{textarea value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="repeat">Would you visit again? Y/N</label>
      {{input value=repeat id="repeat"}}
    </div>
  </form>
  <button {{action 'saveReview' business}}>Submit Review</button>
</div>
{{else}}
<button {{action 'showReviewForm'}}>Add Review</button>
{{/if}}

{{yield}}
